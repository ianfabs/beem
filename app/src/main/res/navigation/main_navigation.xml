<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools" android:id="@+id/main_navigation"
            app:startDestination="@id/main">

    <fragment android:id="@+id/login" android:name="com.fabs.beem.Login" android:label="fragment_login"
              tools:layout="@layout/fragment_login"/>
    <fragment android:id="@+id/createAccount" android:name="com.fabs.beem.CreateAccount"
              android:label="fragment_create_account" tools:layout="@layout/fragment_create_account"/>
    <fragment android:id="@+id/main" android:name="com.fabs.beem.main" android:label="fragment_main"
              tools:layout="@layout/fragment_main">
        <action android:id="@+id/to_createAccount" app:destination="@id/createAccount"/>
        <action android:id="@+id/to_login" app:destination="@id/login"/>
    </fragment>
</navigation>